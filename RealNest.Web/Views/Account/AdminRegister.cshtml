@model AdminViewModelRegister

@{
    ViewData["Title"] = "Admin Ro'yxatdan O'tish";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white text-center">
            <h2 class="mb-0">@ViewData["Title"]</h2>
        </div>
        <div class="card-body p-4">
            <form asp-action="AdminRegister" method="post" class="needs-validation" novalidate>
                <!-- Admin Name -->
                <div class="mb-3">
                    <label asp-for="AdminName" class="form-label fw-bold">Admin Name</label>
                    <input asp-for="AdminName" class="form-control" placeholder="Enter admin name" required />
                    <div class="invalid-feedback">
                        Please enter an admin name.
                    </div>
                    <span asp-validation-for="AdminName" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-bold">Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" required />
                    <div class="invalid-feedback">
                        Please enter a password.
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Confirm Password -->
                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label fw-bold">Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm password" required />
                    <div class="invalid-feedback">
                        Passwords do not match.
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                        Ro'yxatdan O'tish
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    (function () {
        'use strict';
        var forms = document.querySelectorAll('.needs-validation');
        Array.from(forms).forEach(function (form) {
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    })();
</script>

<style>
    .card {
        max-width: 500px;
        margin: 0 auto;
        border-radius: 16px;
    }

    .card-header {
        background-color: #007bff;
        color: white;
        font-size: 1.5rem;
        padding: 16px;
        border-top-left-radius: 16px;
        border-top-right-radius: 16px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .form-control {
        border-radius: 8px;
        padding: 12px;
        font-size: 1rem;
    }

    .form-label {
        font-weight: 600;
    }
</style>
