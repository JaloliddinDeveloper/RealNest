@model AdminLoginViewModel

@{
    ViewData["Title"] = "Admin Login";
}

<h2 class="text-center">Admin Login</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="LoginAdmin" method="post">
            <div class="form-group">
                <label asp-for="AdminName" class="control-label"></label>
                <input asp-for="AdminName" class="form-control" placeholder="Enter your username" />
                <span asp-validation-for="AdminName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-block">Login</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
