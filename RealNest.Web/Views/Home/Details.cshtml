@model House

<h2 class="text-center mt-4">Uy Ma'lumotlari</h2>

<div class="card shadow-lg mt-4 mx-auto" style="max-width: 900px;">
    @if (Model.Pictures == null || !Model.Pictures.Any())
    {
        <img src="~/images/converted_image.png" class="card-img-top house-image" alt="No image available">
        <p class="text-center text-muted mt-2">No pictures available for this house.</p>
    }
    else
    {
        var firstPicture = Model.Pictures.First();
        <img src="@Url.Content("~" + firstPicture.ImageUrl)" class="card-img-top house-image" alt="House image">
    }

    <div class="card-body">
        <h4 class="card-title">@Model.Title</h4>
        <p class="card-text text-muted">@Model.Description</p>

        <div class="row mb-3">
            <div class="col-md-6">
                <p class="card-text"><strong>Narx:</strong> $@Model.Price</p>
                <p class="card-text"><strong>Manzil:</strong> @Model.Address</p>
                <p class="card-text"><strong>Joylashuv:</strong> @Model.Location</p>
            </div>
            <div class="col-md-6">
                <p class="card-text"><strong>Maydoni:</strong> @Model.SquareFootage kv.m</p>
                <p class="card-text"><strong>Listing turi:</strong> @Model.ListingType</p>
                <p class="card-text"><strong>Kontakt ma'lumotlari:</strong> @Model.ContactInformation</p>
            </div>
        </div>

        <a asp-action="HouseImages" asp-controller="Home" asp-route-id="@Model.Id" class="btn btn-info btn-block mt-3">Rasmlarni Ko'rish</a>
    </div>
</div>

<style>
    .house-image {
        width: 100%;
        height: 400px;
        object-fit: cover;
    }

    .card {
        border-radius: 15px;
        overflow: hidden;
    }

    .card-body {
        padding: 20px;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: bold;
        color: #333;
    }

    .card-text {
        font-size: 1rem;
        line-height: 1.5;
    }

    .btn-block {
        width: 100%;
    }
</style>
