@model List<House>

<h2 class="text-center mt-4">Barcha Uylar</h2>

<div class="row">
    @foreach (var house in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                @if (house.Pictures == null || !house.Pictures.Any())
                {
                    <img src="~/images/converted_image.png" class="card-img-top house-image" alt="No image available">
                    <p>No pictures available for this house.</p>
                }
                else
                {
                    var firstPicture = house.Pictures.First();
                    <img src="@Url.Content("~" + firstPicture.ImageUrl)" class="card-img-top house-image" alt="House image">
                }

                <div class="card-body">
                    <h5 class="card-title">@house.Title</h5>
                    <p class="card-text">@house.Description</p>
                    <p class="card-text"><strong>Narx:</strong> $@house.Price.ToString("F2")</p>
                    <p class="card-text"><strong>Manzil:</strong> @house.Address</p>
                    <p class="card-text"><strong>Joylashuv:</strong> @house.Location</p>
                    <p class="card-text"><strong>Maydoni:</strong> @house.SquareFootage kv.m</p>
                    <p class="card-text"><strong>ListingType:</strong> @house.ListingType</p>
                    <p class="card-text"><strong>Contact:</strong> @house.ContactInformation</p>
                    <a asp-action="Details" asp-controller="Home" asp-route-id="@house.Id" class="btn btn-primary">Batafsil</a>
                </div>
            </div>
        </div>
    }
</div>

<style>
   
    h2 {
        font-size: 2.2rem;
        color: #4CAF50;
        margin-bottom: 30px;
        font-weight: 700;
        text-align: center;
        text-transform: uppercase;
    }

    /* Card container */
    .card {
        background-color: #ffffff;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        width: 100%;
        display: flex;
        flex-direction: column;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
        }

    /* House image */
    .house-image {
        width: 100%;
        height: 220px;
        object-fit: cover;
        border-top-left-radius: 16px;
        border-top-right-radius: 16px;
        transition: transform 0.3s ease;
    }

        .house-image:hover {
            transform: scale(1.05);
        }

    /* Card body */
    .card-body {
        padding: 20px;
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: #333;
        margin-bottom: 8px;
    }

    .card-text {
        font-size: 1rem;
        color: #555;
        line-height: 1.5;
        margin-bottom: 6px;
    }

    /* Action Button */
    .btn-primary {
        padding: 12px 24px;
        background: linear-gradient(135deg, #4CAF50, #2196F3);
        color: #fff;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        text-align: center;
        font-size: 16px;
        font-weight: 500;
        transition: background-color 0.3s ease, transform 0.3s ease;
        align-self: flex-start;
        text-decoration: none;
        margin-top: 10px;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #43A047, #1976D2);
            transform: scale(1.05);
        }

    /* No image placeholder */
    .no-image {
        text-align: center;
        padding: 16px;
        color: #888;
        font-size: 0.9rem;
    }
</style>
