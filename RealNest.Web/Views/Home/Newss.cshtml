@model IQueryable<News>

<h1 class="news-title">Yangiliklar</h1>

<div class="news-container">
    @foreach (var blog in Model)
    {
        <div class="news-card">
            <img src="~/@blog.NewsPicture" alt="Yangilik rasmi" class="news-image" />
            <div class="news-content">
                <h2 class="news-heading">@blog.Title</h2>
                <a href="@Url.Action("NewssDet", "Home", new { id = blog.Id })" class="news-button">Batafsil</a>
            </div>
        </div>
    }
</div>
<style>
    /* Sarlavha */
    .news-title {
        text-align: center;
        font-size: 36px;
        font-weight: bold;
        margin-top: 30px;
        color: #2c3e50;
    }

    /* Card konteyneri */
    .news-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
        padding: 40px;
    }

    /* Har bir card */
    .news-card {
        background-color: #fff;
        border-radius: 16px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        width: 300px;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        transition: transform 0.3s ease;
    }

        .news-card:hover {
            transform: translateY(-5px);
        }

    /* Rasm */
    .news-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    /* Card matni */
    .news-content {
        padding: 20px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 100%;
    }

    /* Sarlavha */
    .news-heading {
        font-size: 20px;
        color: #333;
        margin-bottom: 15px;
    }

    /* Tugma */
    .news-button {
        text-decoration: none;
        background-color: #3498db;
        color: white;
        padding: 10px 15px;
        text-align: center;
        border-radius: 8px;
        transition: background-color 0.3s ease;
    }

        .news-button:hover {
            background-color: #2980b9;
        }

</style>