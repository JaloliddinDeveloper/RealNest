@model IEnumerable<House>

<h2 class="text-center mt-4">Barcha ijaraga beriladigan uylar</h2>

<div class="row">
    @foreach (var house in Model)
    {
        <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
            <div class="card house-card">
                @if (house.Pictures == null || !house.Pictures.Any())
                {
                    <img src="~/images/converted_image.png" class="card-img-top house-image" alt="No image available">
                    <p class="text-center text-muted mt-2">No pictures available for this house.</p>
                }
                else
                {
                    var firstPicture = house.Pictures.First();
                    <img src="@Url.Content("~" + firstPicture.ImageUrl)" class="card-img-top house-image" alt="House image">
                }

                <div class="card-body">
                    <h5 class="card-title">@house.Title</h5>
                    <p class="card-text description">@house.Description</p>
                    <a asp-action="Details" asp-controller="Home" asp-route-id="@house.Id" class="btn btn-gradient">Batafsil</a>
                </div>
            </div>
        </div>
    }
</div>
<style>

    /* General styling */
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f9f9f9;
        color: #333;
    }

    h2 {
        font-size: 2rem;
        font-weight: 700;
        color: #333;
        margin-bottom: 40px; /* 40px bottom margin */
    }

    /* Card styling */
    .house-card {
        border: none;
        border-radius: 16px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        overflow: hidden;
        background-color: #ffffff;
    }

        .house-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 32px rgba(0, 0, 0, 0.15);
        }

    /* Image styling */
    .house-image {
        width: 100%;
        height: 250px;
        object-fit: cover;
        border-top-left-radius: 16px;
        border-top-right-radius: 16px;
    }

    /* Card body */
    .card-body {
        padding: 20px;
    }

    .card-title {
        font-size: 1.4rem;
        font-weight: 600;
        color: #222;
        margin-bottom: 10px;
    }

    .description {
        font-size: 0.95rem;
        color: #555;
        line-height: 1.6;
        margin-bottom: 20px;
    }

    /* Gradient button */
    .btn-gradient {
        display: inline-block;
        padding: 10px 18px;
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        color: #fff;
        font-size: 0.95rem;
        font-weight: 500;
        border-radius: 50px;
        transition: background 0.3s ease;
        text-decoration: none;
        border: none;
    }

        .btn-gradient:hover {
            background: linear-gradient(135deg, #2575fc 0%, #6a11cb 100%);
        }

    .description {
        font-size: 0.85rem;
    }

    .btn-gradient {
        font-size: 0.85rem;
        padding: 8px 16px;
    }

    .btn-gradient {
        display: inline-block;
        padding: 12px 24px;
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        color: #fff;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 30px;
        transition: all 0.3s ease;
        text-decoration: none;
        border: none;
        box-shadow: 0 4px 12px rgba(106, 17, 203, 0.4);
        text-align: center;
    }

        .btn-gradient:hover {
            background: linear-gradient(135deg, #2575fc 0%, #6a11cb 100%);
            transform: translateY(-3px);
            box-shadow: 0 6px 18px rgba(37, 117, 252, 0.5);
        }

        .btn-gradient:active {
            transform: translateY(0);
            box-shadow: 0 3px 8px rgba(37, 117, 252, 0.5);
        }
</style>