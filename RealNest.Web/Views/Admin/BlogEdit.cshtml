@model News

<!DOCTYPE html>
<html lang="uz">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Blog</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .form-container {
            max-width: 800px;
            margin: auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .btn-submit, .btn-cancel {
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 4px;
            text-align: center;
        }

        .btn-submit {
            background-color: #4CAF50;
            color: white;
            border: none;
        }

            .btn-submit:hover {
                background-color: #45a049;
            }

        .btn-cancel {
            background-color: #f44336;
            color: white;
            text-decoration: none;
            border: none;
        }

            .btn-cancel:hover {
                background-color: #e53935;
            }
    </style>
</head>
<body>
    <h1 class="text-center my-4">Edit Blog</h1>

    <div class="form-container">
        <form asp-controller="Admin" asp-action="BlogEdit" method="post" enctype="multipart/form-data">

            <!-- Display Current Picture -->
            <div class="form-group mb-3 text-center">
                <label>Current Picture</label><br />
                <img src="/@Model.NewsPicture" alt="Blog Picture" class="img-fluid" style="max-height: 300px;" />
            </div>

            <!-- Upload New Picture -->
            <div class="form-group mb-3">
                <label for="NewPicture">Upload New Picture</label>
                <input type="file" class="form-control" id="NewPicture" name="NewPicture" />
                <span asp-validation-for="NewsPicture" class="text-danger"></span>
            </div>

            <!-- Title Input -->
            <div class="form-group mb-3">
                <label for="Title">Title</label>
                <input type="text" class="form-control" id="Title" asp-for="Title" placeholder="Enter blog title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Content Textarea -->
            <div class="form-group mb-3">
                <label for="Content">Content</label>
                <textarea class="form-control" id="Content" asp-for="Description" placeholder="Enter blog content" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Submit and Cancel buttons -->
            <div class="form-group mb-3 text-center">
                <button type="submit" class="btn-submit">Update</button>
                <a href="@Url.Action("BlogAdmin", "Admin")" class="btn-cancel">Cancel</a>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
</body>
</html>
