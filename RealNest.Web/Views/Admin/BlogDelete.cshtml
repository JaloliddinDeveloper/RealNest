@model News

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Blog</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center text-danger">Are you sure you want to delete this blog?</h2>
        <div class="card mt-4">
            <div class="card-body">
                <h3>@Model.Title</h3>
                <p>@Model.Description</p>
                <img src="@Url.Content("~/Images/" + @Model.NewsPicture)" alt="Blog Image" style="max-width: 100%; height: auto;">
            </div>
        </div>
        <form asp-action="DeleteConfirmed" asp-controller="Admin" method="post" class="mt-3">
            <input type="hidden" name="id" value="@Model.Id" />
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" asp-controller="Blog" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</body>
</html>