@model AddHouseViewModel

@{
    ViewData["Title"] = "Uy yaratish";
}

<h2 class="text-center mb-4">🏠 Uy yaratish</h2>
<p class="text-center text-muted mb-4">
    <strong>E'lon muddati:</strong> E'lonlar 2 oy davomida faol bo'ladi. Muddat tugagach, yangilash mumkin.
</p>

<form asp-action="Create" method="post" enctype="multipart/form-data" class="form-container">
    <div class="form-group">
        <label>Uy nomi</label>
        <input asp-for="Title" class="form-control" required />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Uy haqida ma'lumot</label>
        <textarea asp-for="Description" class="form-control" rows="4" required></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Narxi</label>
        <input asp-for="Price" type="number" class="form-control" required />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Manzil</label>
        <input asp-for="Address" class="form-control" required />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Joylashuv</label>
        <input asp-for="Location" class="form-control" required />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Maydoni (m²)</label>
        <input asp-for="SquareFootage" type="number" class="form-control" required />
        <span asp-validation-for="SquareFootage" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Sotish/Elon berish</label>
        <select asp-for="ListingType" class="form-control" asp-items="Html.GetEnumSelectList<ListingType>()" required>
            <option value="">Iltimos tanlang</option>
        </select>
        <span asp-validation-for="ListingType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Telefon Raqamingiz</label>
        <input asp-for="ContactInformation" class="form-control" required />
        <span asp-validation-for="ContactInformation" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Video Yuklash</label>
        <input asp-for="VideoUrl" type="file" name="VideoFile" accept="video/*" class="form-control" />
        <span asp-validation-for="VideoUrl" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Uy rasmlarini yuklash</label>
        <input type="file" id="HouseImages" name="HouseImages" multiple class="form-control" required />
        <span class="text-muted">Bir yoki bir nechta rasm yuklang (JPG, PNG, GIF)</span>
    </div>

    <button type="button" class="btn-secondary" id="addImageBtn">➕ Rasmlar qo'shish</button>

    <div class="text-center">
        <button type="submit" class="btn-primary">✅ Uy yaratish</button>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        document.getElementById('addImageBtn').addEventListener('click', function() {
            const inputFile = document.getElementById('HouseImages');
            const newFile = document.createElement('input');
            newFile.type = 'file';
            newFile.name = 'HouseImages';
            newFile.multiple = true;
            newFile.className = 'form-control mt-2';
            inputFile.parentNode.insertBefore(newFile, inputFile.nextSibling);
        });
    </script>
}

